<% include ../layout/header-public.ejs %>
<% include ../layout/menu-sign-up.ejs %>



 <div class="ps-page--signin  animated-img" style="background-image:url('../../vendors/img/signup-2.jpg'); padding-bottom: 230px; padding-top: 150px ">
     <div class="container" id="sign-card" style="padding: 2px 0;  height: fit-content;">

        <% if(signUpTypeBusiness){ %>
            <div class="ps-form__header">
                <h3><%=signUpTypeBusiness%></h3>
               
            </div>

            <form action="/signup/business" method="post" class="p-5 bg-white" style="margin: auto;text-align: center;">
          
            <% }else if(signUpTypeIndividual){%>
                <div class="ps-form__header">
                    <h3><%=signUpTypeIndividual%></h3>
                  
                </div>
                <form action="/signup/individual" method="post" class="p-5 bg-white" style="margin: auto;text-align: center;">
            <% } %>

            <% if(signUpErrorMessage){ %>
                <div class="alert alert-danger alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><%=signUpErrorMessage%></strong> 
                  </div>
            <% }else if(signUpSuccessMessage){%>
                <div class="alert alert-success alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><%=signUpSuccessMessage%></strong> 
                  </div>
            <% } %>
            
            <div class="row form-group">
                <div class="col-md-12">
                    <input type="email" autocomplete="off" id="email" name="email" class="form-control" placeholder="Email Address" required>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                        <input type="password" autocomplete="off" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5" title="Password must contain at least 8 characters, including UPPER/lowercase and numbers"
                               pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                               onchange="this.setCustomValidity(this.validity.patternMismatch ? this.title : '');
                            if(this.checkValidity()) form.conpassword.pattern = RegExp.escape(this.value);" required/>
                    <div id="strengthMessage"></div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <input type="password" autocomplete="off" name="conpassword" id="conpassword" class="form-control input-lg" placeholder="Confirm Password" tabindex="8"
                           title="Please enter the same Password as above" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                           onchange="this.setCustomValidity(this.validity.patternMismatch ? this.title : '');" required/>
                    <div id="matchMessage"></div>
                </div>
            </div>

            <div class="ps-select-role row justify-content-center">

                <div class="form-group" id="">
                    <input type="radio" name="role" id="role" value="2" required>
                    <label for="Freelancer">Freelancer</label>
                </div>
                <div class="form-group">
                    <input type="radio" name="role" id="role" value="1" required>
                    <label for="Client">Client</label>
                </div>


            </div>  


            <div class="ps-form__footer">
                <p>By clicking sign up,you agree to the <a href="#">Terms and Conditions </a> and <br>
                    <a href="#">Privacy Policy </a></p>
               <button type="submit" name="register_user" class="ps-btn ps-btn--fullwidth ps-btn--gradient">Create Account</button>
               <p style="padding-bottom: 0px;">Already a member?<a href="/login"> Log In</a></p>
              
           </div>

        </form>

     </div>
 </div>
 <% include ../layout/footer-public.ejs %>
