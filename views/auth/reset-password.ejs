<% include ../layout/header-public.ejs %>
<% include ../layout/menu-public.ejs %>


<div class="ps-page--signin  animated-img" style="background-image:url('../../vendors/img/log_in.jpg');">
    <div class="container" id="sign-card">
        <form class="ps-form--signin" action="/reset-password" method="post">
            <% if(!locals.correct){ %>
                <div class="alert alert-danger" role="alert">
                    <strong>Invalid token</strong>
                </div>
            <% }else{%>
            <% } %>
            <% if(locals.display) {%>
                <% if(locals.changed){ %>
                    <p style="text-align: center;font-weight: bold;font-size: 20px;">Congratulations</p>
                    <p style="text-align: center;">Password has been successfully changed. Click to <a href="/login">here</a> to login </p>
                <% }else{ %>
                    <div class="alert alert-danger" role="alert">
                        <strong>Error changing password</strong>
                    </div>
            <% }
            }%>


            <% if(locals.changed){ }else{%>
            <div class="ps-form__header">
                <h3>Reset Password</h3>
            </div>
            <div class="ps-form__content">
                <div class="form-group" style="margin-top: 20px;">
                    <div class="col-md-12">
                        <input type="email" name="email" id="email" value="<%=locals.email%>" class="form-control input-lg" placeholder="Email Address" tabindex="1" required hidden />
                    </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" value="" placeholder="Password"
                        required="required" />
                </div>
                 <div class="form-group">
                     <input class="form-control" type="password" name="password" value="" placeholder="Confirm Password"
                         required="required" />
                 </div>

            </div>

            <div class="ps-form__footer">
                <button type="submit" name="login-user" class="ps-btn ps-btn--fullwidth ps-btn--gradient">Reset</button>
            </div>
            <% } %>
        </form>
    </div>
</div>

<% include ../layout/footer-public.ejs %>