<% include ../layout/header-public.ejs %>
<% include ../layout/menu-sign-in.ejs %>



<div class="ps-page--signin  animated-img" style="background-image:url('../../vendors/img/log_in.jpg'); padding-bottom: 230px; padding-top: 150px ">
    <div class="container" id="sign-card">

        <form class="ps-form--signin" action="/login" method="post">
            <div class="ps-form__header">

                <h3>Log In</h3>

            </div>
            <div class="ps-form__content">
                <div class="form-group">
                    <div class="col-md-12">
                     <input autocomplete="off" class="form-control" type="email" name="email" placeholder="Email"
                        required="required" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                    <input autocomplete="off" class="form-control" type="password" name="password" placeholder="Password"
                        required="required" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="ps-form__actions">
                        <div class="ps-checkbox ps-checkbox--circle">
                            <input class="form-control" type="checkbox" id="newsletter" name="newsletters"/>
                         <label for="newsletter">Remember me</label>
                        </div><a href="/forgot-password">Forgot password?</a>
                </div>
            </div>
            <div class="ps-form__footer">
                <div class="col-md-12">
                    <button type="submit" id="btnlogin" name="btnlogin" class="ps-btn ps-btn--fullwidth ps-btn--gradient">Log In</button>
                    <p style="padding-top: 0px;">Not a member yet?<a href="/signup-page"> Sign up</a></p>
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../layout/footer-public.ejs %>


