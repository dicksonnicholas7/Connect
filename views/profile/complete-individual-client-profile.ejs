<div class="ps-page--signin  animated-img" style="background-image:url('../../vendors/img/analog-camera-behind-computer-laptop-3773401.jpg'); padding-bottom: 800px; padding-top: 80px ">

            <div class="col-md-12">
                <div class="text-center justify-content-center">
                    <h2>Add Profile</h2>
                    <p class="text-center ">Your profile lets freelancers get to know more about you. Complete your profile to get started on Connect</p>
                </div>
            </div>



    <div class="col-md-12">
        <div class="card justify-content-center">
            <div class="card text-white mb-3">

                <div class="card-header justify-content-center mb-3" style="background-color: #0c4767; height: 50px; padding: 0">
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link mr-5 ml-5" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Personal Details</a>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

                            <form class="form-row justify-content-center">
                                <div class="card-business ml-3 mt-1" >

                                    <div class="row pt-4" style="padding-left: 5rem; padding-right: 5rem;">
                                        <div class="col-md-3 mt-5">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <img class="image-border" src="../../vendors/img/profile-avatar.png" alt="Profile Photo" id="profile" width="120" height="120">
                                                </div>
                                            </div>
                                            <div class="row">
                                              <div class="col-md-12" style="left:13%;color:#0C4767;">
                                                <label >
                                                    <input hidden type="file" id="img" name="img" onchange="readURL(this)" value="Add Photo" accept="image/*">
                                                    Add Photo
                                                </label>    
                                            </div>
                                            </div>
                                        </div>


                                        <div class="col-md-9">

                                          <div class="form-row mt-4">
                                            <div class="form-group col-md-6">
                                              <label for="firstName">First Name</label>
                                              <input type="text" class="form-control" id="fname" placeholder="">
                                            </div>
                                            <div class="form-group col-md-6">
                                              <label for="lastName">Last Name</label>
                                              <input type="text" class="form-control" id="lname" placeholder="">
                                            </div>
                                          </div>

                                            <div class="form-row">
                                                <div class="form-group col-md-12">
                                                    <label for="about">Golden Paragraph</label>
                                                    <textarea type="text" class="form-control" id="about" placeholder="Write a personal summary here..."></textarea>
                                                </div>
                                            </div>

                                            <div class="form-row">
                                              <div class="form-group col-md-6">
                                                <label for="dob">Date of Birth</label>
                                                <input type="date"   max="2002-12-31" class="form-control" id="dob" placeholder="">
                                              </div>
                                              <div class="form-group col-md-6">
                                                <label for="gender">Gender</label>
                                                <select id="gender" class="form-control">
                                                  <option selected>Male</option>
                                                  <option>Female</option>
                                                  <option>Rather Not Say</option>
                                                </select>
                                              </div>
                                            </div>

                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="serviceName">City</label>
                                                    <input type="text" name="city" id="city" class="form-control" placeholder="" required>
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label for="availName">Country</label>
                                                    <input type="text" name="country" id="country" class="form-control" placeholder="Eg: Afganistan" required>
                                                </div>
                                            </div>

                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="serviceName">Email</label>
                                                    <input type="text" name="email" id="email" class="form-control" placeholder="" readonly>
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label for="availName">Phone</label>
                                                    <input type="text" name="phone" id="phone" class="form-control">
                                                </div>
                                            </div>

                                            <div class="form-row justify-content-center">
                                                <div class="col-md-12 mb-5">
                                                    <button name="next" class="form-control profile-btn">NEXT</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

